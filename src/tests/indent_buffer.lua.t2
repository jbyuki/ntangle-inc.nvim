if not ll then
	return -1
end
local hl = M.ll_to_hl[ll]

if not hl then
	return -1
end

local nt_infos = M.TtoNT(buf, line)
local root_section
local line
local root_section
local bufnr
for _, nt_info in ipairs(nt_infos) do
	root_section = nt_info[2]
	line = nt_info[3]
